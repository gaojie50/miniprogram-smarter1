<!-- 筛选弹出框 -->
<view wx:if="{{filterShow.length!=0}}" class="{{filterShow.length!=0? 'filterPanelWrap':''}}">
	<view class="filterPanel {{filterShow=='4' ? 'date':''}}">
		<!-- 时间筛选 -->
		<view class="dateBox" wx:if="{{filterShow=='4'}}">
			<block wx:for="{{dateSet}}" wx:key="value">
				<view class="{{item.checked}} item" data-value="{{item.value}}" bindtap="dateSelectEvent">
					<image class="pic" src="../../static/icon/checked.png" />
					{{item.label}}
				</view>
				<view wx:if="{{item.value == 'custom' && item.checked == 'checked'}}" class="custom-box">
					<view class="date-show">
						<view class="left {{dateShowFirstActive ? 'active' : ''}}" data-sign="begin" bindtap="switchDate">
							<view class="detail">{{customStartDate.value}}</view>
							<text class="week">{{customStartDate.week}}</text>
						</view>
						<text>至</text>
						<view class="right {{!dateShowFirstActive ? 'active' : ''}}" data-sign="end" bindtap="switchDate">
							<view class="detail">{{customEndDate.value}}</view>
							<text class="week">{{customEndDate.week}}</text>
						</view>
					</view>
					<picker-view indicator-style="height: 60rpx;" value="{{dateValue}}" bindchange="dateSelect" class="date-box">
						<picker-view-column>
							<view wx:for="{{years}}" wx:key="item" style="line-height: 60rpx;text-align:right;">{{item}}年</view>
						</picker-view-column>
						<picker-view-column>
							<view wx:for="{{months}}" wx:key="item" style="line-height: 60rpx;text-align:center;">{{item}}月</view>
						</picker-view-column>
						<picker-view-column>
							<view wx:for="{{days}}" wx:key="item" style="line-height: 60rpx;text-align:left;">{{item}}日</view>
						</picker-view-column>
					</picker-view>
				</view>
			</block>
		</view>
		<!-- 预估票房 -->
		<view class="estimateBox" wx:if="{{filterShow=='1'}}">
			<view wx:for="{{estimateBox}}" wx:key="index" data-num="{{index}}" bindtap="tapEstimateBox" class="estimateBox-item {{item.active ? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">{{item.value}}</view>
		</view>
		<!-- 项目状态 -->
		<view class="projectStatus" wx:if="{{filterShow=='2'}}">
			<view wx:for="{{projectBox}}"  wx:key="index" data-num="{{index}}" bindtap="tapProjectStatus" class="projectStatus-item {{item.active? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">{{item.value}}</view>
		</view>
		<!-- 筛选 -->
		<view class="filter" wx:if="{{filterShow=='3'}}">
			<scroll-view scroll-y="true" class="scroll-area" style="min-height: 887rpx">
				<text class="title">制作成本</text>
				<view class="cost-wrap">
					<view wx:for="{{costBox}}"  wx:key="index" data-num="{{index}}" bindtap="tapCost" class="cost-wrap-item {{item.active? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">{{item.value}}</view>
				</view>
				<text class="title">合作状态</text>
				<view class="cooper-wrap">
					<view wx:for="{{cooperBox}}"  wx:key="index" data-num="{{index}}" bindtap="tapCooper" class="cooper-wrap-item {{item.active? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">{{item.value}}</view>
				</view>
				<view class="last-title">
					<text class="title">片方</text>
					<text bindtap="movieAdd" class="add">添加</text>
					<image bindtap="movieAdd" src="../../static/arrow.png" style="height: 20rpx;width: 11rpx" alt="" />
				</view>
				<view class="company">
						<view class="company-left">
							<view wx:for="{{companyList}}" wx:if="{{index%2 === 0}}" data-num="{{index}}" bindtap="tapCompany" wx:key="index" class="company-item {{company[index]=='active' ? 'companyActive':''}}">
								<text data-num="{{index}}"  bindtap="tapCompanyText" >{{item.name}}</text>
							</view>
						</view>
						<view  class="company-right">
							<view wx:for="{{companyList}}" bindtap="tapCompany"  wx:key="index" wx:if="{{index%2 !== 0}}" data-num="{{index}}" class="company-item {{company[index]=='active' ? 'companyActive':''}}">
								<text data-num="{{index}}" bindtap="tapCompanyText">{{item.name}}</text>
							</view>
						</view>
				</view>
			</scroll-view>
		</view>
		<view class="{{filterShow=='3'? 'lastFilterButton':'filterButton'}}">
			<view wx:if="{{filterShow != 4}}" bindtap="filterReset" class="filterButton-reset">重置</view>
			<view wx:if="{{filterShow != 4}}" bindtap="filterDefined" class="filterButton-determine">确定</view>
			<view wx:if="{{filterShow == 4 && showDateSureBtn}}" bindtap="filterDefinedDate" class="filterButton-date-determine">确定</view>
		</view>

	</view>
</view>