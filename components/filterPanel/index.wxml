<!-- 筛选弹出框 -->
<view wx:if="{{filterShow.length!=0}}" class="{{filterShow.length!=0? 'filterPanelWrap':''}}">
	<view class="filterPanel">
		<!-- 时间筛选 -->
		<view class="dateBox" wx:if="{{filterShow=='4'}}">
			<block wx:for="{{dateSet}}" wx:key="value">
				<view class="{{item.checked}} item" data-value="{{item.value}}" bindtap="dateSelectEvent">
					<image class="pic" src="../../static/icon/checked.png" />
					{{item.label}}
				</view>
				<view wx:if="{{item.value == 'custom' && item.checked == 'checked'}}" class="custom-box">
					<view class="date-show">
						<view class="left active">
							<view class="detail">2020.07.22</view>
							<text class="week">周四</text>
						</view>
						<text>至</text>
						<view class="right">
							<view class="detail">2020.07.22</view>
							<text class="week">周五</text>
						</view>
					</view>
					<picker-view indicator-style="height: 60rpx;" value="{{value}}" bindchange="bindChange" class="date-box">
						<picker-view-column>
							<view wx:for="{{years}}" wx:key="{{item}}" style="line-height: 60rpx;text-align:right;">{{item}}年</view>
						</picker-view-column>
						<picker-view-column>
							<view wx:for="{{months}}" wx:key="{{item}}" style="line-height: 60rpx;text-align:center;">{{item}}月</view>
						</picker-view-column>
						<picker-view-column>
							<view wx:for="{{days}}" wx:key="{{item}}" style="line-height: 60rpx;text-align:left;">{{item}}日</view>
						</picker-view-column>
					</picker-view>
				</view>
			</block>
		</view>
		<!-- 预估票房 -->
		<view class="estimateBox" wx:if="{{filterShow=='1'}}">
			<view data-num="1" bindtap="tapEstimateBox" class="estimateBox-item {{estimateBoxActive1? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">10亿以上</view>
			<view data-num="2" bindtap="tapEstimateBox" class="estimateBox-item {{estimateBoxActive2? 'filterPanelActive':''}}" style="margin-right: 20rpx">5亿～10亿</view>
			<view data-num="3" bindtap="tapEstimateBox" class="estimateBox-item {{estimateBoxActive3? 'filterPanelActive':''}}">1亿～5亿</view>
			<view data-num="4" bindtap="tapEstimateBox" class="estimateBox-item {{estimateBoxActive4? 'filterPanelActive':''}}" style="margin-right: 20rpx">5000万～1亿</view>
			<view data-num="5" bindtap="tapEstimateBox" class="estimateBox-item {{estimateBoxActive5? 'filterPanelActive':''}}" style="margin-right: 20rpx">5000万以下</view>
			<view data-num="6" bindtap="tapEstimateBox" class="estimateBox-item {{estimateBoxActive6? 'filterPanelActive':''}}">未知</view>
		</view>
		<!-- 项目状态 -->
		<view class="projectStatus" wx:if="{{filterShow=='2'}}">
			<view data-num="1" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive1? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">筹备</view>
			<view data-num="2" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive2? 'filterPanelActive':''}}" style="margin-right: 20rpx">拍摄</view>
			<view data-num="3" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive3? 'filterPanelActive':''}}" style="margin-right: 20rpx">后期</view>
			<view data-num="4" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive4? 'filterPanelActive':''}}">待过审</view>
			<view data-num="5" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive5? 'filterPanelActive':''}}" style="margin-right: 20rpx">已过审</view>
			<view data-num="6" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive6? 'filterPanelActive':''}}" style="margin-right: 20rpx">已上映</view>
			<view data-num="7" bindtap="tapProjectStatus" class="projectStatus-item {{projectStatusActive7? 'filterPanelActive':''}}">未知</view>
		</view>
		<!-- 筛选 -->
		<view class="filter" wx:if="{{filterShow=='3'}}">
			<scroll-view scroll-y="true" class="scroll-area" style="height: 887rpx">
				<text class="title">制作成本</text>
				<view class="cost-wrap">
					<view data-num="1" bindtap="tapCost" class="cost-wrap-item {{cost1? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">8000万以上</view>
					<view data-num="2" bindtap="tapCost" class="cost-wrap-item {{cost2? 'filterPanelActive':''}}" style="margin-right: 20rpx">5000万-8000万</view>
					<view data-num="3" bindtap="tapCost" class="cost-wrap-item {{cost3? 'filterPanelActive':''}}">1000万-5000万</view>
					<view data-num="4" bindtap="tapCost" class="cost-wrap-item {{cost4? 'filterPanelActive':''}}" style="margin-right: 20rpx">1000万以下</view>
					<view data-num="5" bindtap="tapCost" class="cost-wrap-item {{cost5? 'filterPanelActive':''}}">未知</view>
				</view>
				<text class="title">合作状态</text>
				<view class="cooper-wrap">
					<view data-num="1" bindtap="tapCooper" class="cooper-wrap-item {{cooper1? 'filterPanelActive':''}}" style="margin-right: 20rpx;margin-bottom: 20rpx">评估中</view>
					<view data-num="2" bindtap="tapCooper" class="cooper-wrap-item {{cooper2? 'filterPanelActive':''}}" style="margin-right: 20rpx">跟进中</view>
					<view data-num="3" bindtap="tapCooper" class="cooper-wrap-item {{cooper3? 'filterPanelActive':''}}" style="margin-right: 20rpx">未合作</view>
					<view data-num="4" bindtap="tapCooper" class="cooper-wrap-item {{cooper4? 'filterPanelActive':''}}">开发中</view>
					<view data-num="5" bindtap="tapCooper" class="cooper-wrap-item {{cooper5? 'filterPanelActive':''}}" style="margin-right: 20rpx">投资中</view>
					<view data-num="6" bindtap="tapCooper" class="cooper-wrap-item {{cooper6? 'filterPanelActive':''}}">未知</view>
				</view>
				<view class="last-title">
					<text class="title">片方</text>
					<text style="margin-left: 567rpx" bindtap="movieAdd" class="add">添加 ></text>
				</view>
				<view class="company">
					<block wx:for="{{companyList}}">
						<view data-num="{{index}}" class="company-item {{company[index]=='active' ? 'filterPanelActive':''}}" bindtap="tapCompany">{{item.name}}</view>
					</block>
				</view>
			</scroll-view>
		</view>
		<view class="{{filterShow=='3'? 'lastFilterButton':'filterButton'}}">
			<view wx:if="{{filterShow != 4}}" bindtap="filterReset" class="filterButton-reset">重置</view>
			<view wx:if="{{filterShow != 4}}" bindtap="filterDefined" class="filterButton-determine">确定</view>
			<view wx:if="{{filterShow == 4}}" bindtap="filterDefinedDate" class="filterButton-date-determine">确定</view>
		</view>

	</view>
</view>