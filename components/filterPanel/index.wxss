.last-title .add {
  margin-left: 564rpx;
}

.last-title image {
  margin-left: 10rpx;
}
 
.filterPanelActive {
  background: rgba(24, 144, 255, 0.1) !important;
  border-radius: 10rpx;
  border: 1px solid rgba(24, 144, 255, 1);
  color: rgba(24, 144, 255, 1);
  line-height: 78rpx !important;
}

.companyActive {
  background: rgba(24, 144, 255, 0.1) !important;
  border: 1px solid rgba(24, 144, 255, 1);
  color: rgba(24, 144, 255, 1);
  padding-top: 19rpx !important;
  padding-bottom: 19rpx !important;
}

.company {
  display: flex; 
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 60rpx;
}
.company .company-left {
  width: 335rpx;
  margin-right: 22rpx;
}
.company .company-right {
  width: 335rpx;
}

.company .company-item {
  width: 335rpx;
  min-height: 80rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  background: rgba(242, 243, 248, 1);
  box-sizing: border-box;
}
.company .company-item text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.dateBox .item {
  font-weight: 400;
  font-size: 30rpx;
  color: #333;
  min-height: 92rpx;
  padding: 0 27rpx;
  word-break: break-all;
  display: flex;
  align-items: center;
}

.dateBox .item.checked {
  color: #1791FF;
  position: relative;
}

.dateBox .checked .pic {
  display: block;
  width: 21rpx;
  height: 18rpx;
  margin-right: 18rpx;
  position: absolute;
  left: 0;
}

.dateBox .pic {
  display: none;
}

.custom-box {
  height: 570rpx;
}

.date-show {
  height: 162rpx;
  margin-right: 60rpx;
  border-top: 1rpx solid #E5E5E5;
  position: relative;
  text-align: center;
  padding-top: 46rpx;
  color: #333;
}
.date-show .left, .right {
  font-family: MaoYanHeiTi-H1;
}

.date-show .detail {
  font-size: 46rpx;
  line-height: 46rpx;
  /* font-weight: 500; */
  font-weight: bold;
}

.date-show .left .week {
  float: left;
}

.date-show .right .week {
  float: right;
}

.date-show .week {
  font-weight: 400;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-top: 10rpx;
}

.date-show view.active {
  color: #1791FF;
  border-bottom: 1px solid #1791FF;
}

.date-show .left {
  position: absolute;
  left: 0;
  top: 40rpx;
  width: 320rpx;
  border-bottom: 1px solid #E5E5E5;
  height: 122rpx;
  text-align: left;
}

.date-show .right {
  position: absolute;
  right: 0;
  top: 40rpx;
  width: 320rpx;
  border-bottom: 1px solid #E5E5E5;
  height: 122rpx;
  text-align: right;
}

.date-box {
  width: 100%;
  height: 336rpx;
  position: relative;
  left: -30rpx;
  font-size: 40rpx;
}