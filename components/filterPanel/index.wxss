.filterPanelWrap {
  height: 100%;
  overflow: hidden;
}

.filterPanel {
  width: 100%;
  padding: 30rpx 28rpx 30rpx 30rpx;
  border-top: 1rpx solid rgba(238, 238, 238, 1);
  background-color: #ffffff;
  position: absolute;
  z-index: 50;
  overflow: hidden;
}

.estimateBox {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.estimateBox .estimateBox-item {
  width: 216rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.filterButton {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.lastFilterButton {
  position: absolute;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  z-index: 55;
}

.filterButton-reset {
  width: 335rpx;
  height: 80rpx;
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  border: 1rpx solid rgba(204, 204, 204, 1);
  margin-right: 20rpx;
  text-align: center;
  line-height: 80rpx;
}

.filterButton-determine {
  width: 335rpx;
  height: 80rpx;
  background: rgba(24, 144, 255, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}

.filterButton-date-determine {
  width: 690rpx;
  height: 80rpx;
  background: rgba(24, 144, 255, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}

.projectStatus {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.projectStatus .projectStatus-item {
  width: 158rpx;
  height: 80rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.filter .title {
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.cost-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.cost-wrap .cost-wrap-item {
  width: 216rpx;
  height: 80rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.cooper-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.cooper-wrap .cooper-wrap-item {
  width: 158rpx;
  height: 80rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  white-space: nowrap;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
}

.filterPanelActive {
  background: rgba(24, 144, 255, 0.1) !important;
  border-radius: 10px;
  border: 1px solid rgba(24, 144, 255, 1);
  color: rgba(24, 144, 255, 1);
  line-height: 78rpx !important;
}

.company {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 80rpx;
}

.company .company-item {
  width: 335rpx;
  height: 80rpx;
  margin-top: 20rpx;
  margin-right: 22rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-clamp: 3;
  background: rgba(242, 243, 248, 1);
  box-sizing: border-box;
}

.dateBox .item {
  font-weight: 400;
  font-size: 30rpx;
  color: #333;
  min-height: 92rpx;
  padding: 0 57rpx;
  word-break: break-all;
  display: flex;
  align-items: center;
  width: 200rpx;
}

.dateBox .checked {
  color: #1791FF;
  padding-left: 18rpx;
}

.dateBox .checked .pic {
  display: block;
  width: 21rpx;
  height: 18rpx;
  margin-right: 18rpx;
}

.dateBox .pic {
  display: none;
}

.custom-box {
  height: 540rpx;
}

.date-show {
  height: 162rpx;
  margin-right: 60rpx;
  margin-bottom: 40rpx;
  border-top: 1rpx solid #E5E5E5;
  position: relative;
  text-align: center;
  padding-top: 46rpx;
  color: #333;
}

.date-show .detail {
  font-size: 46rpx;
  line-height: 46rpx;
  font-weight: 500;
}

.date-show .left .week {
  float: left;
}

.date-show .right .week {
  float: right;
}

.date-show .week {
  font-weight: 400;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-top: 10rpx;
}

.date-show .active {
  color: #1791FF;
}

.date-show .left {
  position: absolute;
  left: 0;
  top: 40rpx;
  width: 320rpx;
  border-bottom: 1px solid #E5E5E5;
  height: 162rpx;
  text-align: left;
}

.date-show .right {
  position: absolute;
  right: 0;
  top: 40rpx;
  width: 320rpx;
  border-bottom: 1px solid #E5E5E5;
  height: 162rpx;
  text-align: right;
}

.date-box {
  width: 100%;
  height: 336rpx;
  position: relative;
  left: -30rpx;
}