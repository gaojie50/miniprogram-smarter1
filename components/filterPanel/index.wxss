.filterPanelWrap {
  width: 100%;
  overflow: hidden;
}


.filterPanel {
  width: 100%;
  padding: 30rpx 28rpx 30rpx 30rpx;
  border-top: 1rpx solid rgba(238, 238, 238, 1);
  background-color: #ffffff;
  position: absolute;
  z-index: 50;
  overflow: hidden;
}

.filterPanel.date{
  padding-bottom: 0;
}

.filterPanel.date .filterButton{
  margin-top: 10rpx;
}

.estimateBox {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.estimateBox .estimateBox-item {
  width: 216rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.filterButton {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.lastFilterButton {
  position: relative;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}

.filterButton-reset {
  width: 335rpx;
  height: 80rpx;
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  border: 1rpx solid rgba(204, 204, 204, 1);
  margin-right: 20rpx;
  text-align: center;
  line-height: 80rpx;
}

.filterButton-determine {
  width: 335rpx;
  height: 80rpx;
  background: rgba(24, 144, 255, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}

.filterButton-date-determine {
  width: 690rpx;
  height: 80rpx;
  background: rgba(24, 144, 255, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 30rpx;
}

.projectStatus {
  display: flex;
  flex-direction: row;
