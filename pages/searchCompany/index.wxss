.search-box {
  width: 100%;
  height: 70rpx;
  position: fixed;
  top: 0;
  padding-top: 30rpx;
  background-color: #fff;
  z-index: 2;
}

.search-bar {
  width: 690rpx;
  height: 100%;
  border-radius: 35rpx;
  background-color: #f7f7f7;
  margin: 0 auto;

}

.search-bar input {
  display: block;
  padding-right: 30rpx;
  height: 100%;
  padding-left: 70rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #333;
}

.search-bar icon {
  padding-top: 30rpx;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  margin-left: 30rpx;
}

.search-list {
  margin-top: 115rpx;
}

.search-list view {
  font-weight: 400;
  font-size: 30rpx;
  color: #333;
  min-height: 92rpx;
  padding: 0 57rpx;
  word-break: break-all;
  display: flex;
  align-items: center;
}

.search-list view.checked {
  color: #1791FF;
  padding-left: 18rpx;
}

.search-list view image {
  display: none;
}

.search-list view.checked image {
  display: block;
  width: 21rpx;
  height: 18rpx;
  margin-right: 18rpx;
}

view.finish {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(24, 144, 255, 1);
  border-radius: 10rpx;
  font-size:32rpx;
  font-weight:400;
  text-align: center;
  color: #fff;
  position: fixed;
  bottom: 68rpx;
  left: 50%;
  transform: translate(-50%);
  z-index: 1;
}

view.bottom-bg{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 190rpx;
  background:linear-gradient(180deg,rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%);
}

.list-loading{
  margin-top: 100rpx;
}

.no-data{
  margin-top: 100rpx;
  text-align: center;
  font-size:34rpx;
  line-height: 200rpx;
}