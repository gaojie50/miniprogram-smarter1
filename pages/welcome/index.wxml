<view class="welcome">
	<view style="margin-top:{{titleHeight}}px">
		<image class="logo" src="../../static/welcome/logo.png" />
		<image class="slogan" src="../../static/welcome/slogan.png" />
		<view  class="show" style="height: calc(100vh - 742rpx - {{titleHeight}}px);"></view>
	</view>

	<button class="login-btn" hover-class="login-btn-hover" wx:if="{{!isLogin}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">立即登录</button>
	<button class="login-btn" hover-class="login-btn-hover" wx:if="{{isLogin}}" type="primary" bindtap="goList" plain="true">查看情报</button>
</view>
