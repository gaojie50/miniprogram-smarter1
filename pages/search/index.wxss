.search-box {
  width: 100%;
  height: 70rpx;
  position: fixed;
  top: 0;
  padding-top: 30rpx;
  background-color: #fff;
  z-index: 2;
}

.search-bar {
  width: 690rpx;
  height: 100%;
  border-radius: 35rpx;
  background-color: #f7f7f7;
  margin: 0 auto;

}

.search-bar input {
  display: block;
  padding-right: 30rpx;
  height: 100%;
  padding-left: 70rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #333;
}

.search-bar icon {
  padding-top: 30rpx;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  margin-left: 30rpx;
}

.search-list {
  margin-top: 130rpx;
}

.search-list .item {
  position: relative;
  margin: 0 30rpx 60rpx;
  padding-left: 124rpx;
  height: 140rpx;
}

.search-list image {
  width: 100rpx;
  height: 140rpx;
  position: absolute;
  left: 0;
}

.search-list .item .name {
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  font-size: 34rpx;
  line-height: 52rpx;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.search-list .item .director,
.search-list .item .release {
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 4rpx;
}

.search-list .item .release .schedule-label{
  height: 28rpx;
  line-height: 28rpx;
  font-size: 22rpx;
  font-weight: 400;
  padding: 0 6px;
  border-radius:4rpx;
  margin-left: 10rpx;
}

.list-loading{
  margin-top: 100rpx;
}
.no-data{
  margin-top: 100rpx;
  text-align: center;
  font-size:34rpx;
  line-height: 200rpx;
}