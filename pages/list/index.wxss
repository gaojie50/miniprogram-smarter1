::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 通用 header  start*/
.header{
  background:linear-gradient(135deg,rgba(121,140,186,1) 0%,rgba(49,68,115,1) 100%);
  position: fixed;
  top: 0;
  width: 100%;
  height: 350rpx;
}

.header-bar {
  width: 100%;
  margin-top: 10rpx;
}

.header-inner {
  box-sizing: border-box;
  height: 100%;
  text-align: center;
}

.header-inner .search {
  display: inline-block;
  position: absolute;
  left: 30rpx;
  width: 44rpx;
  height: 44rpx;
}

.header-inner text {
  height: 60rpx;
  font-size: 36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight: 500;
  color: #fff;
}
/* 通用 header  end*/

.search-bar {
  width: 690rpx;
  border-radius: 35rpx;
  height:70rpx;
  background:#fff;
  box-shadow:0px 10px 60px 0px rgba(25,35,59,0.12);
  margin: 10rpx auto 0;
  position: relative;
}

.search-bar input {
  display: block;
  padding-right: 30rpx;
  height: 100%;
  padding-left: 70rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #bbb;
}

.search-bar input.input-ph{
  color: #bbb;
}

.search-bar icon {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  margin-left: 30rpx;
}

.header .main{
  height: 100%;
}