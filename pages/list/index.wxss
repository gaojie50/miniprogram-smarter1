/* 通用 header  start */
.header {
  /* background: linear-gradient(135deg, rgba(121, 140, 186, 1) 0%, rgba(49, 68, 115, 1) 100%); */
  position: fixed;
  top: 0;
  width: 100%;
  height: 350rpx;
}

.header-bar {
  width: 100%;
}

.header-inner {
  box-sizing: border-box;
  height: 100%;
  text-align: center;
}

.header-inner .search {
  display: inline-block;
  position: absolute;
  left: 30rpx;
  width: 44rpx;
  height: 44rpx;
}

.header-inner text {
  height: 60rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  /* font-weight: 500; */
  font-weight: bolder;
  color: #fff;
}

/* 通用 header  end*/

.search-bar {
  width: 690rpx;
  border-radius: 35rpx;
  height: 70rpx;
  background: #fff;
  box-shadow: 0px 10px 60px 0px rgba(25, 35, 59, 0.12);
  margin: 10rpx auto 30rpx;
  position: relative;
}

.search-bar input {
  display: block;
  padding-right: 30rpx;
  height: 100%;
  padding-left: 70rpx;
  font-weight: normal;
  font-size: 28rpx;
  color: #bbb;
}

.search-bar input.input-ph {
  color: #bbb;
}

.search-bar icon {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  margin-left: 30rpx;
}

.header .main {
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  -webkit-backface-visbility:hidden;
  -webkit-transform: translate3d(0,0,0);
  backface-visbility: hidden;
  transform: translate3d(0, 0, 0);
}

/* 无权限 */
.no-access {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, rgba(121, 140, 186, 1) 0%, rgba(49, 68, 115, 1) 100%);
}

.no-access image {
  width: 284rpx;
  height: 386rpx;
  margin: 220rpx auto 0;
  display: block;
}

.no-access .title {
  height: 36rpx;
  font-size: 34rpx;

  /* font-weight: 500; */
  font-weight: bold;

  font-weight: bolder;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  margin-top: 40rpx;
  text-align: center;
}

.no-access .content {
  height: 34px;
  font-size: 24rpx;
  font-weight: normal;
  color: rgba(255, 255, 255, 1);
  line-height: 34px;
  margin-top: 20rpx;
  text-align: center;
}

.no-access .btn {
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(24, 144, 255, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 0 auto;
}

page {
  height: 100%;
  background: linear-gradient(135deg, rgba(121, 140, 186, 1) 0%, rgba(49, 68, 115, 1) 100%); 
}

.list {
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #ffffff;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.list .listFilter {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
  position: sticky;
  top: 0;
  background: rgba(255, 255, 255, 1);
  z-index: 20;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.list .listFilter .listFilter-item {
  width: 187rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list .listFilter .listFilter-item text:nth-child(2){
  margin-right: 8rpx;
  border: 1px solid rgba(24,144,255,1);
  border-radius: 25rpx;
  width: 25rpx;
  height: 25rpx;
  font-family:MaoYanHeiTi-H1-H1,MaoYanHeiTi-H1;
  font-weight: bolder;
  text-align: center;
  font-size: 20rpx;
  line-height: 24rpx;
  color:rgba(24,144,255,1);
  background:rgba(24,144,255,0.1);
}

.listFilter-item-text {
  width: 126rpx;
  line-height: 90rpx;
  margin-right: 8rpx;
  text-align: right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .listFilter image {
  width: 14rpx;
  height: 9.5rpx;
}
.list .derictFilter {
  height: 60rpx;
  background-color: #fff;
  padding: 10rpx 30rpx 20rpx 0; 
  position: sticky;
  top: 90rpx;
  z-index: 15;
}

.list .derictFilter .listDerict {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: flex-start;
  height: 64rpx;
}

.list .listDerict .listDerict-item {
  min-width: 188rpx;
  height: 60rpx;
  margin-right: 10rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
}

.filterActive {
  color: rgba(24, 144, 255, 1);
}

.derictFilterActive {
  background: rgba(24, 144, 255, 0.1) !important;
  border-radius: 10rpx;
  border: 1px solid rgba(24, 144, 255, 1);
  color: rgba(24, 144, 255, 1);
  line-height: 58rpx !important;
}

.list .listTable {
  width: 100%;
  position: relative;
}

.list .listTable .tdPadding {
  padding: 20rpx 0;
}

.list .listTable .listTr {
  display: flex;
  min-height: 70rpx;
}

.tableLeftTitleFixed {
  position: sticky;
  top: 180rpx;
  box-shadow: 14rpx 0 12rpx -6rpx rgba(153, 153, 153, 0.1);
  z-index: 15;
}

.list .listTable .table-left .listTr .listTd {
  width: 218rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-sizing: border-box;
}
.list .listTable .table-left .listTr .listTd  .movieName {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .listTable .table-left .listTr:nth-child(odd) .listTd{
  background:rgba(247,247,247,1);
}
.list .listTable .table-left .listTr:nth-child(even) .listTd{
  background:rgba(255,255,255,1);
}
.list .listTable .table-right .listTr .listTd:nth-child(5),.listTd:nth-child(6),.listTd:nth-child(8) {
  min-width: 250rpx !important;
}
.list .listTable .table-right .listTr .listTd:nth-child(8) view{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display:  -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .listTable .table-right .listTr:nth-child(1) .listTd{
  min-width: 195rpx;
  height: 70rpx;
  padding-left: 30rpx;
  line-height: 70rpx;
  background:rgba(247,247,247,1);
  box-sizing: border-box;
}
.list .listTable .table-right .listTr:not(:first-child) .listTd{
  min-width: 195rpx;
  /* height: 160rpx; */
  display: inline-flex; 
  flex-direction: row;
  align-items: center; 
  padding-left: 30rpx;
  box-sizing: border-box;
}
.list .listTable .table-right .listTr:not(:first-child) .listTd:not(:first-child)  text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.list .listTable .table-left .listTr:last-child {
  border-bottom:1px solid rgba(238,238,238,1);
}
.list .listTable .table-right .rightScroll .listTr:last-child {
  border-bottom:1px solid rgba(238,238,238,1);
}
.list .listTable .table-right .listTr .listTd:nth-child(12) {
  min-width: 253rpx !important;
}
.list .listTable .table-right .listTr:not(:first-child) .listTd:nth-child(12)  view view {
  color: #333333;
}
.list .listTable .table-right .listTr:nth-child(odd) .listTd{
  background:rgba(247,247,247,1);
}
.list .listTable .table-right .listTr:nth-child(even) .listTd{
  background:rgba(255,255,255,1);
}

.tableRightTitleFixed {
  position: sticky;
  top: 180rpx;
  z-index: 14;
}

.list .listTable .listTr .shadow {
  box-shadow: 14rpx 0 12rpx -6rpx rgba(153, 153, 153, 0.1);
  z-index: 14;
}

