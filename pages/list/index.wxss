/* pages/list/index.wxss */
page {
  background:linear-gradient(135deg,rgba(121,140,186,1) 0%,rgba(49,68,115,1) 100%);
}
.list {
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #ffffff;
  font-size: 26rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: rgba(51,51,51,1);
}
.list .listFilter {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}
.list .listFilter .listFilter-item {
  width: 187rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.listFilter-item-text {
  margin-right: 8rpx;
}
.list .listFilter image {
  width: 12rpx;
  height: 7.5rpx;
}
.list .listDerict {
  display: flex;
  width: 100%;
  height: 60rpx;
}
.list .listDerict .listDerict-item {
  padding: 12rpx 16rpx;
  background: rgba(242,243,248,1);
  border-radius: 10px;
  margin-left: 10rpx;
}