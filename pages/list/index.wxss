/* 通用 header  start */
.header {
  background: linear-gradient(135deg, rgba(121, 140, 186, 1) 0%, rgba(49, 68, 115, 1) 100%);
  position: fixed;
  top: 0;
  width: 100%;
  height: 350rpx;
}

.header-bar {
  width: 100%;
}

.header-inner {
  box-sizing: border-box;
  height: 100%;
  text-align: center;
}

.header-inner .search {
  display: inline-block;
  position: absolute;
  left: 30rpx;
  width: 44rpx;
  height: 44rpx;
}

.header-inner text {
  height: 60rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
}

/* 通用 header  end*/

.search-bar {
  width: 690rpx;
  border-radius: 35rpx;
  height: 70rpx;
  background: #fff;
  box-shadow: 0px 10px 60px 0px rgba(25, 35, 59, 0.12);
  margin: 10rpx auto 30rpx;
  position: relative;
}

.search-bar input {
  display: block;
  padding-right: 30rpx;
  height: 100%;
  padding-left: 70rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #bbb;
}

.search-bar input.input-ph {
  color: #bbb;
}

.search-bar icon {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  margin-left: 30rpx;
}

.header .main {
  height: 100%;
}

/* 无权限 */
.no-access {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, rgba(121, 140, 186, 1) 0%, rgba(49, 68, 115, 1) 100%);
}

.no-access image {
  width: 284rpx;
  height: 386rpx;
  margin: 220rpx auto 0;
  display: block;
}

.no-access .title {
  height: 36rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  margin-top: 40rpx;
  text-align: center;
}

.no-access .content {
  height: 34px;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34px;
  margin-top: 20rpx;
  text-align: center;
}

.no-access .btn {
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(24, 144, 255, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 0 auto;
}

page {
  height: 5534px;
  background: linear-gradient(135deg, rgba(121, 140, 186, 1) 0%, rgba(49, 68, 115, 1) 100%);
}

.list {
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #ffffff;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.list .listFilter {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
  position: sticky;
  top: 0;
  background: rgba(255, 255, 255, 1);
  z-index: 20;
}

.list .listFilter .listFilter-item {
  width: 187rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.listFilter-item-text {
  margin-right: 8rpx;
}

.list .listFilter image {
  width: 12rpx;
  height: 7.5rpx;
}

.list .listDerict {
  display: flex;
  width: 100%;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.list .listDerict .listDerict-item {
  padding: 12rpx 16rpx;
  background: rgba(242, 243, 248, 1);
  border-radius: 10rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.filterActive {
  color: rgba(24, 144, 255, 1);
}

.derictFilterActive {
  background-color: rgba(24, 144, 255, 0.1) !important;
  border: 1px solid rgba(24, 144, 255, 1);
  color: rgba(24, 144, 255, 1);
  padding: 11rpx 15rpx !important;
}

.list .listTable {
  width: 100%;
  position: relative;
}

.list .listTable .tdPadding {
  padding: 20rpx 0;
}

.list .listTable .listTr {
  display: flex;
  min-height: 70rpx;
}
.list .listTable .table-left .listTr .listTd {
  width: 218rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-sizing: border-box;
}
.list .listTable .table-left .listTr:nth-child(odd) .listTd{
  background:rgba(247,247,247,1);
}
.list .listTable .table-left .listTr:nth-child(even) .listTd{
  background:rgba(255,255,255,1);
}
.list .listTable .table-right .listTr:nth-child(1) .listTd{
  min-width: 195rpx;
  height: 70rpx;
  padding-left: 30rpx;
  line-height: 70rpx;
  background:rgba(247,247,247,1);
  box-sizing: border-box;
}
.list .listTable .table-right .listTr:not(:first-child) .listTd{
  min-width: 195rpx;
  height: 160rpx;
  display: inline-flex; 
  flex-direction: row;
  align-items: center; 
  padding-left: 30rpx;
  box-sizing: border-box;
}
.list .listTable .table-right .listTr:not(:first-child) .listTd:nth-child(5) text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 3;
}
.list .listTable .table-right .listTr:nth-child(odd) .listTd{
  background:rgba(247,247,247,1);
}
.list .listTable .table-right .listTr:nth-child(even) .listTd{
  background:rgba(255,255,255,1);
}

.list .listTable .listTr .shadow {
  box-shadow: 14rpx 0 12rpx -6rpx rgba(153, 153, 153, 0.1);
  z-index: 10;
}

.listNowrap {
  white-space: nowrap;
}

.extends {
  display: flex;
  right: 0;
  top: 300rpx;
  align-items: center;
  z-index: 15;
  width: 118rpx;
  height: 70rpx;
  background: linear-gradient(90deg, rgba(247, 247, 247, 0) 0%, rgba(247, 247, 247, 1) 100%);
}

.listFiexd {
  position: fixed;
}

.itemHidden {
  display: none !important;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.listTable .table-left {
  position: absolute;
  left: 0;
  top: 0;
}
.listTable .table-right {
  margin-left: 218rpx;
  width: auto;
}

.filterPanel {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 90rpx;
  left: 0;
}

.backdrop{
  position: absolute;
  width: 100%;
  height: 2000px;
  top: 90rpx;
  left: 0;
}

